{
  "name": "solana-project",
  "workspaces": [
    "app",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "build": "yarn workspaces foreach -ptv run build",
    "type-check": "yarn workspaces foreach -ptv run type-check",
    "test": "yarn workspaces foreach -ptv run test",
    "test:e2e": "yarn workspaces foreach -ptv run test:e2e",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "commit": "cz"
  },
  "dependencies": {
    "@project-serum/anchor": "0.18.2",
    "@solana/web3.js": "1.31.0"
  },
  "devDependencies": {
    "@testing-library/cypress": "8.0.2",
    "@testing-library/react": "alpha",
    "@testing-library/react-hooks": "alpha",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "chai": "^4.3.4",
    "commitizen": "4.2.4",
    "cz-emoji": "1.3.1",
    "eslint": "8.3.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jest": "25.3.0",
    "eslint-plugin-jest-dom": "3.9.2",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.27.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "7.0.4",
    "jest": "27.4.0",
    "lint-staged": "12.1.2",
    "mocha": "^9.0.3",
    "prettier": "2.5.0",
    "pretty-quick": "3.1.2",
    "react-test-renderer": "next",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.7",
    "tsm": "^2.1.4",
    "typescript": "4.5.2",
    "ultra-runner": "3.10.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.1.1"
}
